<Window x:Class="Too_Many_Things.Views.OuterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dd="urn:gong-wpf-dragdrop"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Too_Many_Things.ViewModels"
        xmlns:ViewModels="clr-namespace:Too_Many_Things.ViewModels"
        mc:Ignorable="d"
        Title="OuterView" Height="450" Width="800">
    <Grid Background="Honeydew">
        <ListView x:Name="OuterViewListView"
                  Margin="10,30,10,60"
                  ItemsSource="{Binding ItemSource}"
                  SelectedItem="{Binding SelectedChecklist, Mode=TwoWay}"
                  Background="White"
                  dd:DragDrop.IsDragSource="True"
                  dd:DragDrop.IsDropTarget="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
