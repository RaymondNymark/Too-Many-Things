<rxui:ReactiveUserControl x:Class="Too_Many_Things.Wpf.Templates.ChecklistTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Too_Many_Things.Wpf.Templates"
             mc:Ignorable="d"
             xmlns:rxui="http://reactiveui.net"
             xmlns:vm="clr-namespace:Too_Many_Things.Core.ViewModels;assembly=Too-Many-Things.Core"
             x:TypeArguments="vm:ChecklistBagViewModel"
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
                <TextBlock x:Name="ChecklistName" Text="{Binding Name}"/>
                <TextBlock x:Name="EntryCount" Text="{Binding EntryCountString}"/>
            </StackPanel>
</rxui:ReactiveUserControl>
