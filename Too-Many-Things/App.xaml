<Application x:Class="Too_Many_Things.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Views="clr-namespace:Too_Many_Things.Views"
             xmlns:dd="urn:gong-wpf-dragdrop"
             xmlns:ViewModels="clr-namespace:Too_Many_Things.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type ViewModels:OuterViewModel}">
            <Views:OuterView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModels:InnerViewModel}">
            <Views:InnerView/>
        </DataTemplate>
    </Application.Resources>
</Application>
