<rxui:ReactiveUserControl x:Class="Too_Many_Things.Wpf.Templates.ListTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             x:TypeArguments="models:List"
             xmlns:rxui="http://reactiveui.net"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:Too_Many_Things.Core.DataAccess.Models;assembly=Too-Many-Things.Core"
             xmlns:local="clr-namespace:Too_Many_Things.Wpf.Templates"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock x:Name="ChecklistName" Text="{Binding Name}"/>
        <TextBlock x:Name="EntryCount" Text="{Binding EntryCountString}"/>
    </StackPanel>
</rxui:ReactiveUserControl>
